<?xml version="1.0"?>
<ruleset name="REST-Logger">
	<exclude-pattern>*/core/*</exclude-pattern>
	<exclude-pattern>*/wp-api/*</exclude-pattern>
	<rule ref="WordPress-VIP">
		<exclude name="WordPress.VIP.FileSystemWritesDisallow" />
		<exclude name="WordPress.VIP.RestrictedFunctions" />
		<exclude name="WordPress.VIP.RestrictedVariables" />
		<exclude name="WordPress.VIP.SuperGlobalInputUsage" />
		<exclude name="WordPress.VIP.ValidatedSanitizedInput" />
		<exclude name="WordPress.CSRF.NonceVerification" />
		<exclude name="WordPress.XSS.EscapeOutput" />
	</rule>
	<rule ref="WordPress-Core"></rule>
	<rule ref="WordPress-Extra"></rule>
	<rule ref="WordPress-Docs"></rule>
</ruleset>
